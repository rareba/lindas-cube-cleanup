{
  "$schema": "./config.schema.json",
  "triplestore": {
    "type": "fuseki",
    "queryEndpoint": "http://localhost:3030/lindas/query",
    "updateEndpoint": "http://localhost:3030/lindas/update",
    "graphStoreEndpoint": "http://localhost:3030/lindas/data",
    "authentication": {
      "type": "none"
    }
  },
  "cleanup": {
    "graphs": [
      "https://lindas.admin.ch/sfoe/cube"
    ],
    "versionsToKeep": 2,
    "chunkSize": 50000,
    "dryRun": false
  },
  "backup": {
    "enabled": true,
    "type": "local",
    "retentionDays": 90,
    "local": {
      "path": "./backups"
    },
    "s3": {
      "bucket": "lindas-cube-backups",
      "region": "eu-central-1",
      "prefix": "cube-versions/",
      "accessKeyId": "${AWS_ACCESS_KEY_ID}",
      "secretAccessKey": "${AWS_SECRET_ACCESS_KEY}"
    }
  },
  "logging": {
    "level": "info",
    "file": "./logs/cleanup.log",
    "console": true
  },
  "notifications": {
    "enabled": false,
    "onSuccess": false,
    "onFailure": true,
    "webhook": ""
  }
}
