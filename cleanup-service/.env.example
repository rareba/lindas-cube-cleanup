# LINDAS Cube Cleanup Service - Environment Variables
#
# Copy this file to .env and fill in your values
# These can also be set in GitLab CI/CD variables

# Triplestore Configuration
TRIPLESTORE_TYPE=fuseki
SPARQL_QUERY_ENDPOINT=http://localhost:3030/lindas/query
SPARQL_UPDATE_ENDPOINT=http://localhost:3030/lindas/update
SPARQL_GRAPH_STORE_ENDPOINT=http://localhost:3030/lindas/data

# Authentication (optional)
# SPARQL_USERNAME=admin
# SPARQL_PASSWORD=secret

# Cleanup Configuration
CLEANUP_GRAPHS=https://lindas.admin.ch/sfoe/cube
VERSIONS_TO_KEEP=2

# Backup Configuration
BACKUP_TYPE=local
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=90

# S3 Backup Configuration (if BACKUP_TYPE=s3)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=lindas-cube-backups
# AWS_REGION=eu-central-1
# S3_ENDPOINT=https://s3.amazonaws.com  # For custom S3-compatible storage

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/cleanup.log
